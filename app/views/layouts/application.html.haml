!!! 5
%html
  %head
    %title SocialStack
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %header
    - if flash.present?
      %section
        - flash.each do |alert_type, message|
          = content_tag :article, class: "alert-message #{alert_type}" do
            = message
    %section
      = yield
